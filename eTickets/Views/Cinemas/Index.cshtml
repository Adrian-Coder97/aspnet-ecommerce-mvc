@model IEnumerable<Cinema> //this references the cinemas model

@{
    ViewData["Title"] = "List of cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <p>Logo</p>
                    </th>
                    <th>
                        <p>Name</p>
                    </th>
                    <th>
                        <p>Description</p>
                    </th>
                    <th>
                        <p>Actions</p>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name);
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description);
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-warning"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-primary"><i class="bi bi-pencil-eye"></i>Details</a> |
                            <a class="btn btn-danger"><i class="bi bi-pencil-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
